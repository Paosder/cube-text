{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./stories",
    "composite": true,
    "sourceMap": true,
    "target": "es2020",
    "module": "es2015",
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {}
  },
  "include": ["stories/**/*"],
  "exclude": ["stories/**/*.stories.tsx"]
}
